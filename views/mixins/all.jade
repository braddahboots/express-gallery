mixin generateImageGallery(imageGallery)
  .row(data-equalizer='', data-equalizer-mq='large-up')
    div#imageRow
    each obj, index in imageGallery
      .large-4.medium-4.small-12.columns
        .images(data-equalizer-watch='')
          if index > 0
            a(href='/gallery/' + obj.id): img(src= obj.image).image
            p= obj.info
            p= obj.link

//- populate the image that users click on from home page - should be hero image
mixin imageDetails(heroImage)
  h4= heroImage.info
  span= heroImage.link
  img(src= heroImage.image)

//- creates side bar
//- should have a limit of only 3 images
//- should not include hero image as selection
mixin sideColumn(shuffleGallery, selectedImage)
  each obj in shuffleGallery
    if obj.id != selectedImage
      img(src= obj.image)
      span= obj.info
